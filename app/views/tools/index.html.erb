<% content_for :page_title do %>
  Tools
<% end %>

<% content_for :page_buttons do %>
  <% if current_user.admin? %>
    <%= link_to "Add tool", new_tool_path, class: "inline-flex items-center px-4 py-2 border border-brand-dark rounded-md shadow-sm text-sm font-medium text-white bg-brand hover:bg-brand-medium focus:outline-none focus:ring-2 focus:ring-offset-2 ring-brand dark:bg-brand-medium dark:hover:bg-brand-dark dark:ring-brand-dark dark:ring-offset-dark-gray-900" %>
  <% end %>
<% end %>


<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg dark:border-dark-gray-600">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-dark-gray-600">
          <thead class="bg-gray-50 dark:bg-dark-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-dark-gray-300">
                Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-dark-gray-300">
                Description
              </th>
            </tr>
          </thead>
          <tbody>
            <% @tools.each do |tool| %>

            <% if cycle('odd', 'even') == 'odd' %>
              <tr class="bg-white dark:bg-dark-gray-800">
            <% else %>
              <tr class="bg-gray-50 dark:bg-dark-gray-700">
            <% end %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-dark-gray-300">
                <%= link_to tool.name, edit_tool_path(tool) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-dark-gray-400">
                <%= tool.description %>
              </td>
            </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>