
<%= form_with(model: tool) do |form| %>

  <%= render "shared/error_messages", resource: tool %>

  <div class="shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 bg-white sm:p-6">

      <div class="grid grid-cols-6 gap-6">
        
        <div class="col-span-6 sm:col-span-3">
          <%= form.label :name_en, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name_en, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <div class="col-span-6 sm:col-span-3">
          <%= form.label :name_fr, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name_fr, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>


        <div class="col-span-6">
          <%= form.label :description_en, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :description_en, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <div class="col-span-6">
          <%= form.label :description_fr, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :description_fr, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <div class="col-span-6 sm:col-span-3">
          <%= form.label :link_en, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :link_en, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <div class="col-span-6 sm:col-span-3">
          <%= form.label :link_fr, class:"block text-sm font-medium text-gray-700" %>
          <%= form.text_field :link_fr, class:"mt-1 focus:ring-brand focus:border-brand block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <div class="col-span-6">
          <label class="block text-sm font-medium text-gray-700">Icon</label>
          <div class="mt-1 flex items-center space-x-6">
            <% if tool.icon.attached? %>
              <div class="mt-1 shrink-0 inline">
                <%= image_tag tool.icon, class:"h-16 w-16 object-cover rounded-full" %>
              </div>
            <% end %>
            <label class="mt-1 block">
              <span class="sr-only">Choose tool icon</span>
              <%= form.file_field :icon, class: "block w-full text-sm text-gray-500
                file:mr-4 file:py-2 file:px-4
                file:rounded-full file:border-0
                file:text-sm file:font-semibold
                file:bg-brand-light file:text-brand-medium
                hover:file:bg-red-300
              " %>
            </label>
          </div>
        </div>

      </div>
    </div>

    <div class="text-right">

    <div class="form-group px-4 py-3 bg-gray-50 text-right sm:px-6 bg-brand-light-hover">
      <%= form.submit "Save", class:"inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-brand focus:outline-none focus:ring-2 focus:ring-offset-2 ring-brand" %>
    </div>

  </div>
</div>
<% end %>