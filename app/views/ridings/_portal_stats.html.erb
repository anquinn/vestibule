<div class="mt-12">

 <% if @riding.email_plan.present? && @riding.email_plan.active? %>
  
  <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-dark-gray-300">
    <%= t("general.email_plan") %>

    <div class="ml-5 inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium bg-green-200 text-green-800 shadow-md shadow-green-500/40 md:mt-2 lg:mt-0 items-baseline dark:bg-transparent dark:text-green-600 dark:shadow-none dark:border dark:border-green-600">
      <%= t("general.active") %>
    </div>

    <% if @riding.email_plan.current_subscribes >= @riding.email_plan.size %>
    <div class="ml-5 inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium bg-amber-300 text-amber-900 shadow-md shadow-amber-500/40 md:mt-2 lg:mt-0 items-baseline dark:bg-transparent dark:text-amber-300 dark:shadow-none dark:border dark:border-amber-300">
      <%= t("email_plans.exceeded_plan") %>
    </div>
    <% end %>
  </h3>


  <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-1 lg:grid-cols-3">

    <div class="relative bg-white pt-5 px-4 pb-12 sm:pt-6 sm:px-6 col-span-1 shadow-md rounded-lg overflow-hidden border dark:bg-dark-gray-800 dark:border-none dark:shadow-highlight">
      <dt>
        <div class="absolute bg-brand rounded-md p-3 dark:bg-brand-dark">
          <svg class="h-6 w-6 text-white dark:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <p class="ml-16 text-sm font-medium text-gray-500 truncate dark:text-dark-gray-300"><%= t("email_plans.current_email_plan") %></p>
      </dt>
      <dd class="ml-16 pb-10 flex items-baseline sm:pb-7">
        <p class="text-2xl font-semibold text-gray-900 dark:text-dark-gray-400">
          <%= number_with_delimiter(@riding.email_plan.size, locale: current_user.preferred_language) %>
        </p>
        <p class="ml-2 flex items-baseline text-sm font-medium text-gray-500 dark:text-dark-gray-400">
          <%= t("email_plans.subscribed_emails") %>
        </p>
        <div class="absolute bottom-0 inset-x-0 bg-gray-50 px-4 py-4 sm:px-6 dark:bg-dark-gray-700 dark:text-dark-gray-300">
          <div class="flex text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-dark-gray-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <span class="ml-2"><%= t("email_plans.expires") %> <%= l(@riding.email_plan.end_date.in_time_zone("EST"), format:'%B %e, %Y') %></span>
          </div>
        </div>
      </dd>
    </div>

    <div class="relative bg-white pt-5 px-4 pb-12 sm:pt-6 sm:px-6 col-span-1 lg:col-span-2 shadow-md rounded-lg overflow-hidden border dark:bg-dark-gray-800 dark:border-none dark:shadow-highlight">

  <div class="text-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 dark:text-dark-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>

    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-dark-gray-300"><%= t("email_plans.exceeded_plan_notice") %></h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-dark-gray-400">
      <%= t("email_plans.exceeded_plan_instructions") %> <span class="text-gray-900 font-medium dark:text-dark-gray-300"><%= t("email_plans.support_email") %></span>.
    </p>
  </div>
</div>

  </dl>
<% else %>

<h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-dark-gray-300">
  <%= t("general.email_plan") %>

  <div class="ml-5 inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium bg-red-100 text-red-800 shadow-md shadow-red-500/40 md:mt-2 lg:mt-0 items-baseline dark:bg-transparent dark:text-red-800 dark:shadow-none dark:border dark:border-red-800">
    <%= t("general.inactive") %>
  </div>
</h3>

<div class="mt-6 relative bg-white pt-5 px-4 pb-12 sm:pt-6 sm:px-6 shadow-md rounded-lg overflow-hidden border dark:bg-dark-gray-800 dark:border-none dark:shadow-highlight">

  <div class="text-center">
    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-dark-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76" />
    </svg>

    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-dark-gray-300"><%= t("email_plans.no_current_plan") %></h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-dark-gray-400">
      <%= t("email_plans.purchase_instructions") %>
    </p>
    <p class="mt-1 text-sm text-gray-500 dark:text-dark-gray-400">
      <%= t("email_plans.purchase_size") %> <span class="font-medium text-gray-900 dark:text-dark-gray-300"><%=number_with_delimiter(suggested_email_plan_size(@riding), locale: current_user.preferred_language)%> <%= t("email_plans.subscribed_emails") %></span>.
    </p>

    <div class="mt-6">
      <%= link_to t("email_plans.purchase_button"), email_plan_purchase_link(@riding), class:"inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-brand hover:bg-brand-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand dark:bg-brand-dark dark:text-dark-gray-300 dark:hover:bg-brand-medium", target:"_blank" %>
    </div>
  </div>
</div>

<% end %>






</div>