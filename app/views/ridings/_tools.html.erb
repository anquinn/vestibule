<div class="mt-12 onboarding-offset" id="tools">

  <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-dark-gray-300">
    <%= t("general.tools") %>
  </h3>

  <div class="mt-6">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <% Tool.all.each do |tool| %>

        <div class="relative shadow-md rounded-lg overflow-hidden border bg-white px-6 py-5 flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-brand dark:bg-dark-gray-800 dark:border-transparent dark:shadow-highlight dark:hover:border-1 dark:hover:border-dark-gray-700 dark:ring-offset-dark-gray-900 dark:ring-brand-dark">
          <div class="flex-shrink-0">
            <% if tool.icon.attached? %>
              <%= image_tag tool.icon, class: "h-10 w-10 object-contain" %>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-500 dark:text-dark-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            <% end %>
          </div>
          <div class="flex-1 min-w-0">
            <%= link_to tool.link, class: "focus:outline-none", target:"_blank" do %>
              <span class="absolute inset-0" aria-hidden="true"></span>
              <p class="text-sm font-medium text-gray-900 dark:text-dark-gray-300">
                <%= tool.name %>
              </p>
              <p class="text-sm text-gray-500 truncate dark:text-dark-gray-400">
                <%= tool.description %>
              </p>
            <% end %>
          </div>
          <div class="ml-5 flex-shrink-0">
            <!-- Heroicon name: solid/chevron-right -->
            <svg class="h-5 w-5 text-gray-400 dark:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>