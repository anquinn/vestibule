<div class="mt-6">
  <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-dark-gray-300">
    <%= t("ridings.finacnes") %>
  </h3>

  <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <%= render partial: "shared/stat_block", locals: { stat_title: t("ridings.vf_donors"), stat: "78", icon: "users" } %>

    <%= render partial: "shared/stat_block", locals: { stat_title: t("ridings.monthly_vf_revenue"), stat: "$1,063", icon: "currency-dollar"} %>

    <%= render partial: "shared/stat_block", locals: { stat_title: t("ridings.riding_donors"), stat: "130", icon: "user-group"} %>

    <%= render partial: "shared/bank_balance_block", locals: { stat_title: t("ridings.bank_balance"), stat: number_to_currency(@riding.current_bank_balance, locale: current_user.preferred_language), icon: "cash"} %>
  </dl>
