<div class="flex-shrink-0 flex items-center">
  <%= image_tag "logo.png", class: "h-10 w-10 round-full block" %>
</div>

<% if user_signed_in? %>
<div class="flex-1 mt-6 w-full px-2 space-y-1">
  <!-- Current: "bg-red-800 text-white", Default: "text-red-100 hover:bg-red-800 hover:text-white" -->

  <%= link_to ridings_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300 nav-item", id:"ridings_menu" do %>

    <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    <span class="mt-2"><%= t("general.ridings") %></span>
  <% end %>

  <% if policy(:report).index? %>
    <%= link_to reports_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300 nav-item", id:"reports_menu" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span class="mt-2"><%= t("general.reports") %></span>
    <% end %>
  <% end %>

  <% if current_user.admin? %>
    <div class="items-center">
      <hr class="mt-5 border-t border-red-700 dark:border-dark-gray-600" aria-hidden="true">
      <p class="mt-3 mb-5 text-center mx-auto px-3 text-xs font-medium text-brand-dark uppercase tracking-wider dark:text-dark-gray-500">
        Admin
      </p>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to announcements_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
      </svg>

      <span class="mt-2 text-center"><%= t("general.announcements") %></span>
    <% end %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to external_reports_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
      <span class="mt-2 text-center"><%= t("general.external_reports") %></span>
    <% end %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to tools_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>

      <span class="mt-2"><%= t("general.tools") %></span>
    <% end %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to user_permissions_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <span class="mt-2"><%= t("general.permissions") %></span>
    <% end %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to users_path, class: "text-red-100 hover:bg-brand-dark hover:text-white group w-full p-3 rounded-md flex flex-col items-center text-xs font-medium dark:text-dark-gray-400 dark:hover:bg-dark-gray-900 dark:hover:text-dark-gray-300" do %>

      <svg class="text-red-300 group-hover:text-white h-6 w-6 dark:text-brand-medium dark:group-hover:text-dark-gray-300" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <span class="mt-2"><%= t("general.users") %></span>
    <% end %>
  <% end %>
</div>
<% end %>